{
  "id": "${artifactId}-${version}",
  "name": "Interlibrary Request Requesting Agency API",
  "requires": [
    {
      "id": "users",
      "version": "15.0"
    }
  ],
  "provides": [
    {
      "id": "_tenant",
      "version": "2.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": ["POST"],
          "pathPattern": "/_/tenant",
          "modulePermissions": [
            "pubsub.event-types.post",
            "pubsub.publishers.post",
            "pubsub.subscribers.post"
          ]
        }, {
          "methods": ["GET", "DELETE"],
          "pathPattern": "/_/tenant/{id}"
        }
      ]
    },
    {
      "id": "ill-ra",
      "version": "0.1",
      "handlers": [
        {
          "methods": ["GET"],
          "pathPattern": "/ill-ra/suppliers",
          "permissionsRequired": ["ill-ra.suppliers.collection.get"]
        },
        {
          "methods": ["PUT"],
          "pathPattern": "/ill-ra/sa_update",
          "permissionsRequired": ["ill-ra.requests.item.put"]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/ill-ra/requests",
          "permissionsRequired": ["ill-ra.requests.collection.get"]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/ill-ra/requests/{id}",
          "permissionsRequired": ["ill-ra.requests.item.get"]
        },
        {
          "methods": ["POST"],
          "pathPattern": "/ill-ra/requests",
          "permissionsRequired": ["ill-ra.requests.collection.post"]
        },
        {
          "methods": ["PUT"],
          "pathPattern": "/ill-ra/requests/{id}",
          "permissionsRequired": ["ill-ra.requests.item.put"]
        },
        {
          "methods": ["PUT"],
          "pathPattern": "/ill-ra/requests/{id}/status",
          "permissionsRequired": ["ill-ra.requests.item.put"]
        },
        {
          "methods": ["PUT"],
          "pathPattern": "/ill-ra/requests/{id}/retry",
          "permissionsRequired": ["ill-ra.requests.item.put"]
        },
        {
          "methods": ["PUT"],
          "pathPattern": "/ill-ra/requests/{id}/reminder",
          "permissionsRequired": ["ill-ra.requests.item.put"]
        },
        {
          "methods": ["PUT"],
          "pathPattern": "/ill-ra/requests/{id}/renew",
          "permissionsRequired": ["ill-ra.requests.item.put"]
        },
        {
          "methods": ["PUT"],
          "pathPattern": "/ill-ra/requests/{id}/notify",
          "permissionsRequired": ["ill-ra.requests.item.put"]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/ill-ra/statuses",
          "permissionsRequired": ["ill-ra.statuses.collection.get"]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/ill-ra/statuses/{id}",
          "permissionsRequired": ["ill-ra.statuses.item.get"]
        },
        {
          "methods": ["POST"],
          "pathPattern": "/ill-ra/statuses",
          "permissionsRequired": ["ill-ra.statuses.item.post"]
        },
        {
          "methods": ["PUT"],
          "pathPattern": "/ill-ra/statuses/{id}",
          "permissionsRequired": ["ill-ra.statuses.item.put"]
        },
        {
          "methods": ["DELETE"],
          "pathPattern": "/ill-ra/statuses/{id}",
          "permissionsRequired": ["ill-ra.statuses.item.delete"]
        }
      ]
    }
  ],
  "permissionSets": [
    {
      "permissionName": "ill-ra.suppliers.collection.get",
      "displayName": "Interlibrary loan suppliers - get supplier collection",
      "description": "Get supplier collection"
    },
    {
      "permissionName": "ill-ra.requests.collection.get",
      "displayName": "Interlibrary loan requests - get request collection",
      "description": "Get request collection"
    },
    {
      "permissionName": "ill-ra.requests.item.get",
      "displayName": "Interlibrary loan requests - get request",
      "description": "Get request"
    },
    {
      "permissionName": "ill-ra.requests.item.post",
      "displayName": "Interlibrary loan requests - create request",
      "description": "Create request"
    },
    {
      "permissionName": "ill-ra.requests.item.put",
      "displayName": "Interlibrary loan requests - update request",
      "description": "Update request"
    },
    {
      "permissionName": "ill-ra.statuses.collection.get",
      "displayName": "Interlibrary loan request statuses- get status collection",
      "description": "Get status collection"
    },
    {
      "permissionName": "ill-ra.statuses.item.get",
      "displayName": "Interlibrary loan request status - get status",
      "description": "Get status"
    },
    {
      "permissionName": "ill-ra.statuses.item.post",
      "displayName": "Interlibrary loan request statuses - create status",
      "description": "Create status"
    },
    {
      "permissionName": "ill-ra.statuses.item.put",
      "displayName": "Interlibrary loan request statuses - update status",
      "description": "Update status"
    },
    {
      "permissionName": "ill-ra.statuses.item.delete",
      "displayName": "Interlibrary loan request statuses - delete status",
      "description": "Delete status"
    }

  ],
  "launchDescriptor": {
    "dockerImage": "${artifactId}:${version}",
    "dockerPull": false,
    "dockerArgs": {
      "HostConfig": {
        "Memory": 357913941,
        "PortBindings": { "8081/tcp": [ { "HostPort": "%p" } ] }
      }
    },
    "env": [
      { "name": "JAVA_OPTIONS",
        "value": "-XX:MaxRAMPercentage=66.0"
      },
      { "name": "DB_HOST", "value": "postgres" },
      { "name": "DB_PORT", "value": "5432" },
      { "name": "DB_USERNAME", "value": "folio_admin" },
      { "name": "DB_PASSWORD", "value": "folio_admin" },
      { "name": "DB_DATABASE", "value": "okapi_modules" },
      { "name": "DB_QUERYTIMEOUT", "value": "60000" },
      { "name": "DB_CHARSET", "value": "UTF-8" },
      { "name": "DB_MAXPOOLSIZE", "value": "5" }
    ]
  }
}
