{
  "id": "${artifactId}-${version}",
  "name": "Interlibrary Request Requesting Agency API",
  "requires": [
    {
      "id": "users",
      "version": "15.0"
    }
  ],
  "provides": [
    {
      "id": "_tenant",
      "version": "2.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": ["POST"],
          "pathPattern": "/_/tenant",
          "modulePermissions": [
            "pubsub.event-types.post",
            "pubsub.publishers.post",
            "pubsub.subscribers.post"
          ]
        }, {
          "methods": ["GET", "DELETE"],
          "pathPattern": "/_/tenant/{id}"
        }
      ]
    },
    {
      "id": "ill-ra",
      "version": "0.1",
      "handlers": [
        {
          "methods": ["GET"],
          "pathPattern": "/ill-ra/submissions",
          "permissionsRequired": ["ill-ra.submissions.collection.get"]
        },
        {
          "methods": ["POST"],
          "pathPattern": "/ill-ra/submissions",
          "permissionsRequired": ["ill-ra.submissions.collection.post"]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/ill-ra/submissions/{id}",
          "permissionsRequired": ["ill-ra.submissions.item.get"]
        },
        {
          "methods": ["PUT"],
          "pathPattern": "/ill-ra/submissions/{id}",
          "permissionsRequired": ["ill-ra.submissions.item.put"]
        },
        {
          "methods": ["DELETE"],
          "pathPattern": "/ill-ra/submissions/{id}",
          "permissionsRequired": ["ill-ra.submissions.item.delete"]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/ill-ra/requests",
          "permissionsRequired": ["ill-ra.requests.collection.get"]
        },
        {
          "methods": ["POST"],
          "pathPattern": "/ill-ra/requests",
          "permissionsRequired": ["ill-ra.requests.collection.post"]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/ill-ra/requests/{id}",
          "permissionsRequired": ["ill-ra.requests.item.get"]
        },
        {
          "methods": ["PUT"],
          "pathPattern": "/ill-ra/requests/{id}",
          "permissionsRequired": ["ill-ra.requests.item.put"]
        },
        {
          "methods": ["DELETE"],
          "pathPattern": "/ill-ra/requests/{id}",
          "permissionsRequired": ["ill-ra.requests.item.delete"]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/ill-ra/submission-statuses",
          "permissionsRequired": ["ill-ra.submissionStatuses.collection.get"]
        },
        {
          "methods": ["POST"],
          "pathPattern": "/ill-ra/submission-statuses",
          "permissionsRequired": ["ill-ra.submissionStatuses.collection.post"]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/ill-ra/submission-statuses/{id}",
          "permissionsRequired": ["ill-ra.submissionStatuses.item.get"]
        },
        {
          "methods": ["PUT"],
          "pathPattern": "/ill-ra/submission-statuses/{id}",
          "permissionsRequired": ["ill-ra.submissionStatuses.item.put"]
        },
        {
          "methods": ["DELETE"],
          "pathPattern": "/ill-ra/submission-statuses/{id}",
          "permissionsRequired": ["ill-ra.submissionStatuses.item.delete"]
        }
      ]
    }
  ],
  "permissionSets": [
    {
      "permissionName": "ill-ra.submissions.collection.get",
      "displayName": "Interlibrary loan submissions - get submissions collection",
      "description": "Get submissions collection"
    },
    {
      "permissionName": "ill-ra.submissions.collection.post",
      "displayName": "Interlibrary loan submissions - create submission",
      "description": "Create submission"
    },
    {
      "permissionName": "ill-ra.submissions.item.get",
      "displayName": "Interlibrary loan submissions - get submission",
      "description": "Get submission"
    },
    {
      "permissionName": "ill-ra.submissions.item.put",
      "displayName": "Interlibrary loan submissions - update submission",
      "description": "Update submission"
    },
    {
      "permissionName": "ill-ra.submissions.item.delete",
      "displayName": "Interlibrary loan submissions - delete submission",
      "description": "Delete submission"
    },
    {
      "permissionName": "ill-ra.submissionStatuses.collection.get",
      "displayName": "Interlibrary loan submission statuses - get submission statuses collection",
      "description": "Get submission statuses collection"
    },
    {
      "permissionName": "ill-ra.submissionStatuses.collection.post",
      "displayName": "Interlibrary loan submission statuses - create submission status",
      "description": "Create submission status"
    },
    {
      "permissionName": "ill-ra.submissionStatuses.item.get",
      "displayName": "Interlibrary loan submission statuses - get submission status",
      "description": "Get submission status"
    },
    {
      "permissionName": "ill-ra.submissionStatuses.item.put",
      "displayName": "Interlibrary loan submission statuses - update submission status",
      "description": "Update submission status"
    },
    {
      "permissionName": "ill-ra.submissionStatuses.item.delete",
      "displayName": "Interlibrary loan submission statuses - delete submission status",
      "description": "Delete submission status"
    },
    {
      "permissionName": "ill-ra.requests.collection.get",
      "displayName": "Interlibrary loan submission requests - get requests collection",
      "description": "Get requests collection"
    },
    {
      "permissionName": "ill-ra.requests.collection.post",
      "displayName": "Interlibrary loan requests - create request",
      "description": "Create request"
    },
    {
      "permissionName": "ill-ra.requests.item.get",
      "displayName": "Interlibrary loan requests - get request",
      "description": "Get request"
    },
    {
      "permissionName": "ill-ra.requests.item.put",
      "displayName": "Interlibrary loan requests - update request",
      "description": "Update request"
    },
    {
      "permissionName": "ill-ra.requests.item.delete",
      "displayName": "Interlibrary loan requests - delete request",
      "description": "Delete request"
    }
  ],
  "launchDescriptor": {
    "dockerImage": "${artifactId}:${version}",
    "dockerPull": false,
    "dockerArgs": {
      "HostConfig": {
        "Memory": 357913941,
        "PortBindings": { "8081/tcp": [ { "HostPort": "%p" } ] }
      }
    },
    "env": [
      { "name": "JAVA_OPTIONS",
        "value": "-XX:MaxRAMPercentage=66.0"
      },
      { "name": "DB_HOST", "value": "postgres" },
      { "name": "DB_PORT", "value": "5432" },
      { "name": "DB_USERNAME", "value": "folio_admin" },
      { "name": "DB_PASSWORD", "value": "folio_admin" },
      { "name": "DB_DATABASE", "value": "okapi_modules" },
      { "name": "DB_QUERYTIMEOUT", "value": "60000" },
      { "name": "DB_CHARSET", "value": "UTF-8" },
      { "name": "DB_MAXPOOLSIZE", "value": "5" }
    ]
  }
}
